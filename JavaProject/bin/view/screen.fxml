<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="1500.0" prefWidth="2048.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox prefHeight="1500.0" prefWidth="325.0" BorderPane.alignment="CENTER">
         <children>
            <TitledPane animated="false" text="Create">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="200.0">
                     <children>
                        <Button layoutX="123.0" layoutY="14.0" mnemonicParsing="false" onAction="#emptyButtonPressed" text="Empty" />
                        <Button fx:id="btnBinaryTree" layoutX="99.0" layoutY="217.0" mnemonicParsing="false" onAction="#btnBinaryTreePressed" text="Binary Tree" />
                        <Button fx:id="btnBbTree" layoutX="63.0" layoutY="284.0" mnemonicParsing="false" text="Binary Balance Tree" />
                        <Button fx:id="btnGenTree" layoutX="93.0" layoutY="79.0" mnemonicParsing="false" onAction="#btnGenTreePressed" text="Generic Tree" />
                        <Button fx:id="btnBalanceTree" layoutX="94.0" layoutY="148.0" mnemonicParsing="false" onAction="#btnBalancePressed" text="Balance Tree" />
                     </children>
                  </AnchorPane>
              </content>
            </TitledPane>
            <TitledPane animated="false" text="Insert">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <Label layoutX="14.0" layoutY="16.0" text="Parent :" />
                        <TextField fx:id="tfParentInsert" layoutX="116.0" layoutY="16.0" prefWidth="180.0" />
                        <TextField fx:id="tfValueInsert" layoutX="116.0" layoutY="67.0" prefHeight="45.0" prefWidth="180.0" />
                        <Button fx:id="btnInsert" layoutX="46.0" layoutY="124.0" mnemonicParsing="false" onAction="#btnInsertPressed" text="Insert" />
                        <Label layoutX="14.0" layoutY="73.0" text="VALUE :" />
                     </children>
                  </AnchorPane>
              </content>
            </TitledPane>
            <TitledPane animated="false" text="Search">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <Label layoutX="14.0" layoutY="14.0" text="VALUE :" />
                        <TextField fx:id="tfSearch" layoutX="101.0" layoutY="7.0" prefHeight="45.0" prefWidth="180.0" />
                        <Button layoutX="41.0" layoutY="69.0" mnemonicParsing="false" onAction="#btnSearchPressed" text="Search" />
                     </children>
                  </AnchorPane>
              </content>
            </TitledPane>
            <TitledPane animated="false" text="Remove">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <Label layoutX="26.0" layoutY="14.0" text="VALUE :" />
                        <TextField fx:id="tfRemove" layoutX="105.0" layoutY="7.0" prefHeight="45.0" prefWidth="180.0" />
                        <Button fx:id="btnRemove" layoutX="47.0" layoutY="69.0" mnemonicParsing="false" text="Remove" />
                     </children>
                  </AnchorPane>
              </content>
            </TitledPane>
            <HBox alignment="CENTER" prefHeight="100.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#btnTraversalPressed" text="Traverse" />
               </children>
            </HBox>
         </children>
      </VBox>
   </left>
   <center>
      <Pane fx:id="drawPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <VBox prefHeight="200.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="btnStop" mnemonicParsing="false" onAction="#stop" text="Stop">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#play" text="Play">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0">
               <children>
                  <Button fx:id="btnPreviousStep" mnemonicParsing="false" onAction="#previousStep" text="Previous Step">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnNextStep" mnemonicParsing="false" onAction="#nextStep" text="Next Step" />
               </children>
            </HBox>
         </children>
      </VBox>
   </right>
</BorderPane>
